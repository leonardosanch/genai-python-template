# .env.example

# -----------------------------------------------------------------------------
# APP
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# LLM
# -----------------------------------------------------------------------------
# Mode: openai, anthropic
LLM__MODE=openai

# OpenAI
LLM__OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
LLM__OPENAI_MODEL="gpt-4o"

# Anthropic
LLM__ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY"
LLM__ANTHROPIC_MODEL="claude-3-opus-20240229"

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# SQLAlchemy async connection string
# Example: postgresql+asyncpg://user:password@localhost:5432/genai
DATABASE__URL="postgresql+asyncpg://user:password@localhost:5432/genai"
DATABASE__ECHO=false

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
# Redis connection URL
# Example: redis://localhost:6379/0
REDIS__URL="redis://localhost:6379/0"

# -----------------------------------------------------------------------------
# OBSERVABILITY
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
OBSERVABILITY__LOG_LEVEL="INFO"
# OpenTelemetry GRPC endpoint. Leave empty to disable.
# Example: http://localhost:4317
OBSERVABILITY__OTEL_EXPORTER_OTLP_ENDPOINT=""

# -----------------------------------------------------------------------------
# AUTH & RATE LIMITING
# -----------------------------------------------------------------------------
# Comma-separated API keys (empty = auth disabled)
API_KEYS=[]
# Requests per minute per client IP
RATE_LIMIT_RPM=60

# -----------------------------------------------------------------------------
# DATA ENGINEERING
# -----------------------------------------------------------------------------
DATA_ENGINEERING__DEFAULT_BATCH_SIZE=1000
DATA_ENGINEERING__MAX_RECORDS_IN_MEMORY=100000
DATA_ENGINEERING__DEFAULT_FORMAT="csv"
DATA_ENGINEERING__CLEANING_STRIP_WHITESPACE=true
DATA_ENGINEERING__CLEANING_DROP_DUPLICATES=false

# -----------------------------------------------------------------------------
# CLOUD STORAGE
# -----------------------------------------------------------------------------
CLOUD__STORAGE_BACKEND="local"
CLOUD__S3_BUCKET=""
CLOUD__S3_REGION="us-east-1"
CLOUD__S3_ENDPOINT_URL=""